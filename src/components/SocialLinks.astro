---
import Link from "./shared/Link.astro";
import presentation from "@/data/presentation";
---

<ul role="list" class="flex flex-row gap-2 items-center flex-wrap">
  {
    presentation.socials.map((social, index) => (
      <>
        <li>
          <Link 
            href={social.link} 
            label={social.label}
            icon={social.icon}
          />
        </li>

        {presentation.socials.length - 1 !== index && (
          <li class="text-neutral-400 select-none">/</li>
        )}
      </>
    ))
  }
</ul>
