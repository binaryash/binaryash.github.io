---
import type { Project } from "@/data/projects";

type Props = Project & {
  githubLink?: string; // new optional GitHub URL
};

const { title, techs, link, desc, isComingSoon, githubLink } = Astro.props;
---

<div class="project-card">
  <div class="project-card-inner">
    <div class="project-header">
      <h3 class="project-title">{title}</h3>
      {isComingSoon && (
        <span class="coming-soon-badge">Coming Soon</span>
      )}
    </div>
    
    <div class="project-techs">
      {techs.map((tech) => (
        <span class="tech-tag">{tech}</span>
      ))}
    </div>

    {desc && (
      <p class="project-description">{desc}</p>
    )}

    <div class="project-links">
      {!isComingSoon && link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="project-link"
        >
          <span>View Project</span>
          <svg
            width="16"
            height="16"
            viewBox="0 0 18 18"
            fill="none"
            class="link-arrow"
          >
            <path
              d="M5.25 12.75L12.75 5.25"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
            <path
              d="M5.25 5.25H12.75V12.75"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </a>
      )}

      {!isComingSoon && githubLink && (
        <a
          href={githubLink}
          target="_blank"
          rel="noopener noreferrer"
          class="project-link"
        >
          <span>View GitHub</span>
          <svg
            width="16"
            height="16"
            viewBox="0 0 18 18"
            fill="none"
            class="link-arrow"
          >
            <path
              d="M5.25 12.75L12.75 5.25"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
            <path
              d="M5.25 5.25H12.75V12.75"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </a>
      )}
    </div>
  </div>
</div>
